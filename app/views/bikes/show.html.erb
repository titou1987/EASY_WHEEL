<div class="container d-flex m-3 p-3 shadow mx-auto rounded-3" data-controller="datepicker">
    <div class="row d-flex m-4">
      <div class= "col-12">
        <img class= "img-fluid detail_img shadow" src="<%= cl_image_path @bike.photo.key %>" />
        <h1 class= "pt-2"><%= @bike.bike_name %></h1>
        <div class= "col-4">Owner:
          <%=@bike.user.first_name %>
          <%=@bike.user.last_name %>
        </div>
        <div class="detail_type">
          <%= @bike.type %>
        </div>
        <div class="detail_price">
          <p><strong><span data-datepicker-target="price"><%= @bike.price %></span> â‚¬</strong> per day</p>
        </div>
        <%= @bike.description %>
      </div>
    </div>

  <div class= "datepicker col-4 pt-5">
    <%= simple_form_for [@bike, @rental], html: { data: { action: 'change->datepicker#display_price' } } do |f| %>
      <%= f.input :start_date,
                  as: :string,
                  input_html: {
                    data: {
                      datepicker_target: 'startDateInput',
                    }
                  }, required: true %>
      <%= f.input :end_date,
                  as: :string,
                  input_html: {
                    data: {
                      datepicker_target: 'endDateInput'
                    }
                  }, required: true %>
      <%= f.submit 'Book now!', class: 'btn btn-warning' %>
    <% end %>
    <br>
    <p data-datepicker-target="days"></p>
  </div>
</div>
